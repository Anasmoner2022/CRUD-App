<%- include('./layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
             <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
             </div>
            <% } %>
            <div class="table-responsive">
                <% if (users != "") { %>
                <table class="table table-stripped text-center my-3 hover display compact" id="table">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>E-mail</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((row , index) => { %>
                            <tr>
                                <td><%= index %></td>
                                <td><img src="/<%= row.image %>" width="50" class="img-thumbnail"></td>
                                <td><%= row.name %></td>
                                <td><%= row.email %></td>
                                <td><%= row.phone %></td>
                                <td>
                                    <a href="/edit/<%= row._id %>" class="text-success"><i class="fa fa-edit fa-lg mx-1" aria-hidden="true"></i></a>
                                    <a href="/delete/<%= row._id %>" class="text-danger"><i class="fa fa-trash fa-lg mx-1" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% }else{ %>
                    <h1 class="text-center text-secondry mt-5">No Users found in Database</h1cla>
                <% } %>

            </div>
        </div>
    </div>
</div>

<%- include('./layout/footer') %>
